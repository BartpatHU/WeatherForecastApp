<Window x:Class="WeatherForecastApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherForecastApp"
        xmlns:viewmodel="clr-namespace:WeatherForecastApp.ViewModel"
        xmlns:view="clr-namespace:WeatherForecastApp.Views"
        mc:Ignorable="d"
        Title="Weather Forecast Application" Height="400" Width="400"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        >
    <Grid Background="AliceBlue">

        <StackPanel Orientation="Vertical" Margin="0">
            <view:UserControlView DataContext="{Binding UserControl}"></view:UserControlView>
            <view:DisplayWeatherView Margin="0,-200,0,0" DataContext="{Binding DisplayWeather}"></view:DisplayWeatherView>
        </StackPanel>
 
    </Grid>

</Window>
